<%= form_for(@tag, html: {class: "form-horizontal"}) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :site, class: "control-label" %>
    <div class="controls"><%= collection_select :tag, :site_id, Site.all, :id, :domain, :prompt => 'Please select a site'  %></div>
  </div>
  <div class="control-group">
    <%= f.label :str, class: "control-label" %>
    <div class="controls"><%= f.text_field :str %></div>
  </div>
  <div class="controls">
    <%= f.submit class: "btn btn-primary" %>
    <%= back_link %>
  </div>
<% end %>
